{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",                          // Specify ECMAScript target version
    "module": "esnext",                       // Specify module code generation
    "jsx": "react",                           // Support JSX in .tsx files
    "outDir": "./dist/",                      // Output directory for compiled files
    "rootDir": "./src/",                      // Root directory of input files
    "removeComments": true,                   // Remove comments from output
    "strict": true,                           // Enable strict mode
    "esModuleInterop": true,                  // Enables CommonJS/AMD/UMD module emit interoperability
    "skipLibCheck": true,                     // Skip type checking for declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistent casing in filenames

    /* Modules */
    "moduleResolution": "node",               // Use Node.js style module resolution
    "allowSyntheticDefaultImports": true,     // Allow synthetic default imports
    "isolatedModules": true,                  // Ensure every file is a module

    /* Advanced Options */
    "resolveJsonModule": true,                // Allow importing .json files

    /* Source Maps */
    "sourceMap": true,                        // Generate source maps

    /* Type Checking */
    "noImplicitAny": true,                    // Raise error on expressions and declarations with an implied 'any' type
    "noUnusedLocals": true,                   // Report errors on unused locals
    "noUnusedParameters": true,               // Report errors on unused parameters

    /* Experimental Options */
    "experimentalDecorators": true,           // Enables experimental support for ES decorators
    "emitDecoratorMetadata": true             // Emit design-type metadata for decorated declarations in source
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
